{
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "runtimeExecutable": "dev",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "skipFiles": ["${workspaceFolder}/node_modules/**/*.js"],
      "preLaunchTask": "run client",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
    }
  ]
}
